    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Launch localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Open in Firefox",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*",
                "https://*/**",
                "jquery*"
            ]
        }
    ]
}
